{% macro c(name, options = {}) -%}
    {% set options = options|merge({
        attrs: options.attrs ?? {},
        class: options.class ?? name,
        classPrefix: options.classPrefix ?? 'c',
        element: options.element ?? 'div',
    }) %}

    {% set options = options|merge({ rootClass: options.classPrefix ~ '_' ~ options.class }) %}

    {% include 'components/' ~ name ignore missing with options only %}
{%- endmacro %}