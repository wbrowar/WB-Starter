{
  "scripts": {
    "ci:build": "npm run prebuild && gridsome build",
    "component": "node ./_starter/component.js",
    "dev": "npm run prebuild && gridsome develop",
    "prebuild": "node ./_starter/prebuild.js --csstemplates --scssincludes",
    "prod": "npm run prebuild && gridsome build",
    "watch": "npm run prebuild && gridsome develop"
  },
  "prettier": {
    "files": "{_source,src}/**/*.{js,json,scss,vue}",
    "options": "--write"
  },
  "styleInventory": {
    "enabled": false
  },
  "paths": {
    "base": {
      "src": ""
    },
    "components": {
      "grouped": false,
      "src": "src/components/"
    },
    "css": {
      "dist": "static/css/",
      "src": "_source/_css/"
    },
    "favicon": {
      "dist": "static/favicon/",
      "src": "_source/_favicon/"
    },
    "icon": {
      "dist": "static/icon/",
      "src": "_source/_icon/"
    },
    "img": {
      "dist": "static/img/",
      "src": "_source/_img/"
    },
    "js": {
      "dist": "static/js/",
      "src": "_source/_js/"
    },
    "templates": {
      "dist": "static/",
      "src": "_source/_templates/"
    }
  },
  "dependencies": {
    "gridsome": "^0.6.0",
    "@gridsome/plugin-critical": "^0.1.3",
    "gridsome-plugin-sass-resources-loader": "^0.0.3",
    "intersection-observer": "^0.7.0",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "style-resources-loader": "^1.2.1"
  }
}