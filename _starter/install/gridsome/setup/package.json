{
  "scripts": {
    "ci:build": "npm run prebuild && gridsome build",
    "component": "node ./_starter/component.js",
    "dev": "npm run prebuild && gridsome develop",
    "prebuild": "node ./_starter/prebuild.js --componentdocs --csstemplates --iconmethods --prettier --scssincludes",
    "prod": "npm run prebuild && gridsome build",
    "watch": "npm run prebuild && gridsome develop"
  },
  "prettier": {
    "files": "{_source,src}/**/*.{js,json,scss,vue}",
    "options": "--write"
  },
  "styleInventory": {
    "enabled": false
  },
  "paths": {
    "base": {
      "src": ""
    },
    "components": {
      "grouped": true,
      "src": "_source/_components/"
    },
    "css": {
      "dist": "static/css/",
      "src": "_source/_css/"
    },
    "favicon": {
      "dist": "static/favicon/",
      "src": "_source/_favicon/"
    },
    "icon": {
      "dist": "static/icon/",
      "src": "_source/_icon/"
    },
    "img": {
      "dist": "static/img/",
      "src": "_source/_img/"
    },
    "js": {
      "dist": "static/js/",
      "src": "_source/_js/"
    },
    "templates": {
      "dist": "static/",
      "src": "_source/_templates/"
    }
  },
  "dependencies": {
    "gridsome": "0.6.9",
    "@gridsome/plugin-critical": "^0.1.3",
    "@gridsome/source-graphql": "^0.1.0",
    "gridsome-plugin-sass-resources-loader": "^0.0.3",
    "style-resources-loader": "^1.2.1",
    "vue-mq": "^1.0.1"
  }
}