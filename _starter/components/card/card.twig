{# @var craft \craft\web\twig\variables\CraftVariable #}

{% extends 'partials/_component.twig' %}
{% import 'macros/component.twig' as component %}

{# Variables #}
{% set image = image ?? null %}
{% set imageForeground = imageForeground ?? null %}
{% set imageTheme = imageTheme ?? null %}
{% set imageUrl = imageUrl ?? null %}
{% set info = info ?? null %}
{% set lazyLoad = lazyLoad ?? true %}

{% block content -%}
    {% if image ?? false %}
        <div class="c-card__image{% if imageTheme ?? false %} c-card__image--{{ imageTheme }}{% endif %}">
            {% set options = {
                image: image,
                lazyLoad: lazyLoad,
                title: image.title ?? '',
                imager: {
                    transforms: [
                        { width: 500, height: 500 },
                        { width: 800, height: 800 },
                    ],
                }
            } %}
            {{ component.c('image_bg', { classes: ['c-card__image__background'], image: options }) }}

            {% if imageForeground ?? false %}
                <div class="c-card__image__middle"></div>
                <div class="c-card__image__foreground">{{ imageForeground|raw }}</div>
            {% endif %}
            {% if imageUrl ?? false %}
                <a class="c-card__image__url_mask" href="{{ imageUrl }}"></a>
            {% endif %}
        </div>
    {% endif %}
    {% if info ?? false %}
        <div class="c-card__info">
            {% if info.title ?? false %}
                <h1 class="c-card__info__title c-header c-header--3">{{ info.title }}</h1>
            {% endif %}
            {% if info.subtitle ?? false %}
                <h1 class="c-card__info__subtitle">{{ info.subtitle }}</h1>
            {% endif %}
            {% if info.phone ?? info.fax ?? info.email ?? false %}
                <div class="c-card__info__contact">
                    {% if info.phone ?? false %}
                        <a class="c-card__info__phone" href="tel:+1{{ info.phone|replace('-', '') }}">P: {{ info.phone }}</a>
                    {% endif %}
                    {% if info.fax ?? false %}
                        <a class="c-card__info__fax" href="tel:+1{{ info.fax|replace('-', '') }}">F: {{ info.fax }}</a>
                    {% endif %}
                    {% if info.email ?? false %}
                        <a class="c-card__info__email" href="mailto:{{ info.email }}">{{ info.email }}</a>
                    {% endif %}
                    {% if info.otherContact %}
                        {% for item in info.otherContact %}
                            <span>{{ item|raw }}</span>
                        {% endfor %}
                    {% endif %}
                </div>
            {% endif %}
            {% if info.summary ?? false %}
                <div class="c-card__info__summary c-text">{{ truncateOnWord(info.summary, 200, ' â€¦')|markdown|typogrify }}</div>
            {% endif %}
            {% if (info.buttonLabel ?? false) and (info.buttonUrl ?? false) %}
                {{ component.c('button', { classes: ['c-card__info__button'], label: info.buttonLabel, url: info.buttonUrl }) }}
            {% endif %}
        </div>
    {% endif %}
{%- endblock %}