{% extends 'partials/_component.twig' %}

{# Variables #}
{% set anchor = anchor ?? false %}
{% set label = label ?? '' %}
{% set linkField = linkField ?? null %}
{% set target = target ?? '' %}
{% set url = url ?? null %}

{# Component element overrides #}
{% if linkField ?? false %}
    {% set label = linkField.getText() %}
    {% set url = linkField.getUrl() %}

    {% if linkField.ariaLabel ?? false %}
        {% set attrs = attrs|merge({ 'aria-label': linkField.ariaLabel }) %}
    {% endif %}
    {% if linkField.target ?? false %}
        {% set target = linkField.target %}
    {% endif %}
{% endif %}

{% set element = (url ?? false) ? 'a' : 'button' %}

{% set attrs = attrs|merge({
    href: (url ?? false) ? url : null,
    target: (target ?? false) ? target : null,
    rel: (target ?? false) ? "noopener" : null,
}) %}

{% block content -%}
    {{ label }}
{%- endblock %}